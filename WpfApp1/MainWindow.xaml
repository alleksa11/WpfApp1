<Window x:Class="ProductManagementApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProductManagementApp"
        mc:Ignorable="d"
        Title="Product Management" Height="450" Width="800">
    <Grid>
        <ListBox x:Name="productListBox" HorizontalAlignment="Left" Height="300" Margin="50,50,0,0" VerticalAlignment="Top" Width="300"/>
        <Label Content="Name:" HorizontalAlignment="Left" Margin="400,50,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="nameTextBox" HorizontalAlignment="Left" Margin="500,50,0,0" VerticalAlignment="Top" Width="200"/>
        <Label Content="Price:" HorizontalAlignment="Left" Margin="400,100,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="priceTextBox" HorizontalAlignment="Left" Margin="500,100,0,0" VerticalAlignment="Top" Width="200"/>
        <Label Content="Quantity:" HorizontalAlignment="Left" Margin="400,150,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="quantityTextBox" HorizontalAlignment="Left" Margin="500,150,0,0" VerticalAlignment="Top" Width="200"/>
        <Button Content="Add Product" HorizontalAlignment="Left" Margin="500,200,0,0" VerticalAlignment="Top" Width="100" Click="AddProduct_Click"/>
    </Grid>
</Window>
